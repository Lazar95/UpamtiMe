@model UpamtiMe.Models.SessionModel

<table data-course-id="@Model.CourseID" style="width:1400px ; display: none " id="table-of-god" data-session="learn">
    @foreach (Data.DTOs.CardSessionDTO card in @Model.Cards)
    {
        <tr>
            <td id="table-of-god-user-card-id">@Html.DisplayFor(a => card.UserCardInfo.UserCardID)</td>
            <td id="table-of-god-card-id">@Html.DisplayFor(a => card.BasicInfo.CardID)</td>
            <td id="table-of-god-question">@Html.DisplayFor(a => card.BasicInfo.Question)</td>
            <td id="table-of-god-answer">@Html.DisplayFor(a => card.BasicInfo.Answer)</td>
            <td id="table-of-god-description">@Html.DisplayFor(a => card.BasicInfo.Description)</td>
            <td id="table-of-god-since-seen">@Html.DisplayFor(a => card.UserCardInfo.LastSeen)</td>
            <td id="table-of-god-since-plan">@Html.DisplayFor(a => card.UserCardInfo.NextSee)</td>
            <td id="table-of-god-total-correct-answers">@Html.DisplayFor(a => card.UserCardInfo.CorrectAnswers)</td>
            <td id="table-of-god-total-wrong-answers">@Html.DisplayFor(a => card.UserCardInfo.WrongAnswers)</td>
            <td id="table-of-god-combo">@Html.DisplayFor(a => card.UserCardInfo.Combo)</td>
            <td id="table-of-god-goodness">@Html.DisplayFor(a => card.UserCardInfo.Goodness)</td>
            <td id="table-of-god-multiple-choice-1">@Html.DisplayFor(a => card.CardChallange.MultipleChoice[0])</td>
            <td id="table-of-god-multiple-choice-2">@Html.DisplayFor(a => card.CardChallange.MultipleChoice[1])</td>
            <td id="table-of-god-multiple-choice-3">@Html.DisplayFor(a => card.CardChallange.MultipleChoice[2])</td>
            <td id="table-of-god-multiple-choice-4">@Html.DisplayFor(a => card.CardChallange.MultipleChoice[3])</td>
            <td id="table-of-god-hangman">@Html.DisplayFor(a => card.CardChallange.Hangman)</td>
            <td id="table-of-god-scrabble">@Html.DisplayFor(a => card.CardChallange.Scrabble)</td>
        </tr>
    }
</table>

<main id="review-session">

    <div class="workspace">
        <aside class="info">
            <div class="session-info">
                <!--<h3>Trenutna sesija</h3>-->
                <dl class="general">
                    <div><dt>Broj odgovora</dt><dd id="cards-current-total">0/0</dd></div>
                    <div><dt>Tačnost</dt><dd id="accuracy">0%</dd></div>
                    <div><dt>Proteklo vreme</dt><dd id="time">00'00"</dd></div>
                    <div><dt>Trenutni kombo</dt><dd id="session-combo">0</dd></div>
                </dl>
                <dl class="total-score">
                    <div><dt>Osvojeni poeni</dt><dd id="score">0.00</dd></div>
                </dl>
                <dl class="last-score">
                    <div><dt></dt><dd id="last-score">&pm;0.00</dd></div>
                </dl>
                <dl class="last-score-breakdown">
                    <div><dt>Base score</dt> <dd id="base-score" class="level-1">&nbsp;</dd></div>
                    <div><dt>Card combo</dt> <dd id="card-combo" class="level-1">&nbsp;</dd></div>
                    <div><dt>Session combo</dt> <dd id="session-combo" class="level-1">&nbsp;</dd></div>
                    <div><dt>Time bonus</dt> <dd id="time-bonus" class="level-1">&nbsp;</dd></div>
                </dl>
            </div>
        </aside>
        <div class="cards">
            <div class="card current-card">
                <div class="card-content simple">
                    <div class="card-info">
                        <dl>
                            <dt>Poslednji put viđena</dt>
                            <dd id="card-last-seen">pre 18 sati</dd>
                        </dl>
                        <dl>
                            <dt>Kombo na kartici</dt>
                            <dd id="card-combo">3</dd>
                        </dl>
                    </div>
                    <div class="question">
                        <span></span>
                    </div>
                    <div class="prompt">
                        <input type="text" spellcheck="false" id="type-answer">
                    </div>
                    <div class="given-answer">
                        <span></span>
                    </div>
                    <div class="correct-answer">
                        <span></span>
                    </div>
                    <button class="next"><i class="fa fa-arrow-right"></i></button>
                </div>
                <div class="timer" id="timer">
                    <div class="remaining-time">
                        <span>12"&nbsp;84</span>
                    </div>
                </div>
            </div>
            <div class="card next-card">
                <span>sledeća reč na srpski</span>
            </div>
        </div>
        <aside class="options">
            <button id="ignore">X</button>
            <button id="help">?</button>
            <button id="bookmark">!</button>
        </aside>
    </div>

    <aside class="progress-bar"><ul></ul></aside>

    @Helper.SessionCover(@Model.CourseID, Url, 1)

</main>


<script src="~/Scripts/sessions.js"></script>